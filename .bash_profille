function EXT_COLOR () { echo -ne "\e[38;5;$1m"; }
function CLOSE_COLOR () { echo -ne '\e[m'; }

alias ll="ls -la"

# git aliases
alias gti="git"
alias gs="git status"
alias gp="git pull"
alias gi="git info"
alias gd="git diff"

alias ls="ls -lhtFG"
alias nh="node --harmony"

# prompt to show colorized user and location
export PS1="\[`EXT_COLOR 58`\]\u\[`CLOSE_COLOR`\]@\[`EXT_COLOR 209`\]\H\[`CLOSE_COLOR`\]:\[`EXT_COLOR 148`\]\w\[`CLOSE_COLOR`\]\$ "




export WORKON_HOME=$HOME/envs
export PROJECT_HOME=$HOME/projects
export VIRTUALENVWRAPPER_PYTHON=/usr/local/bin/python3
source /usr/local/bin/virtualenvwrapper.sh

# Setting PATH for Python 3.4
PATH="~/bin:${PATH}"
export PATH=~/npm-global/bin:$PATH

export ANSIBLE_HOSTS=/Users/ncs/projects/ansib/ansible_hosts
